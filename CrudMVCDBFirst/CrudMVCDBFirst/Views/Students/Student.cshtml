
@model CrudMVCDBFirst.Context.tbl_Students

@{
    ViewBag.Title = "Student";
}

@using (Html.BeginForm("Add_Stdents", "Student", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            <label>Name</label>
            @Html.TextBoxFor(x => x.Name, new { @Class = "form-control " })
        </div>
        <div class="form-group">
            <label>Fname</label>
            @Html.TextBoxFor(x => x.Fname, new { @Class = "form-control " })
        </div>
        <div class="form-group">
            <label>Email</label>
            @Html.TextBoxFor(x => x.Email, new { @Class = "form-control " })
        </div>
        <div class="form-group">
            <label>Description</label>
            @Html.TextAreaFor(x => x.Description, new { @Class = "form-control ",@Rows ="10" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="reset" class="btn btn-danger">Cancle</button>
        </div>
    </div>




}

